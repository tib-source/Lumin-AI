{
    "version": 2,
    "builds": [
      { "src": "server/package.json", "use": "@vercel/node" },
      { "src": "client/dist", "use": "@vercel/static" }
    ],
    "rewrites": [
      {
        "source": "/api/(.*)",
        "destination": "/backend/server.js"
      },
      {
        "source": "/(.*)",
        "destination": "/client/dist/$1"
      }
    ]
  }